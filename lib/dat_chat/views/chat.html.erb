    <header>
      <div class="container">
        <div class="row">
          <div class="page-header">
            <div class="col-sm-6">
              <h1 class="pull-left">Chat</h1>
            </div>
            <div class="col-sm-6">
              <h1 class="pull-right"><a href="/auth/sign_out"><i class="glyphicon glyphicon-log-out"></i></a></h1>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </header>
    <div class="container">
      <div class="row">
        <div id="chat-text">
          <% unless @messages.empty? %>
            <% @messages.reverse.each do |message| %>
              <div class='panel panel-default'><div class='panel-heading'><%= message.handle %></div><div class='panel-body'><%= message.text %></div></div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <footer class="footer">
      <div class="container">
        <div class="row">
          <form id="message-form" class="form-inline">
            <div class="form-group">
              <input id="input-text" type="text" class="form-control" placeholder="Enter chat text here!" autofocus />
            </div>
            <button class="btn btn-primary" type="submit">Send</button>
          </form>
        </div>
      </div>
    </footer>
